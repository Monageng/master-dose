<?import java.net.*?>
<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.image.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.collections.*?>
<?import javafx.scene.text.*?>

<GridPane fx:controller="co.za.master.dose.control.ConfigController" 
    xmlns:fx="http://javafx.com/fxml"  hgap="5" vgap="10"  prefHeight="900.0" prefWidth="900.0"
    styleClass="root">
    <stylesheets>
    	<URL value="@Login.css" />
  	</stylesheets>
 <GridPane GridPane.columnIndex="1" GridPane.rowIndex="1" >
      <Text id="image-text" text="Settings" GridPane.columnIndex="0" GridPane.rowIndex="0" GridPane.columnSpan="4" />
 			 <VBox GridPane.columnIndex="0" GridPane.rowIndex="1"  style="-fx-border-color:grey; -fx-border-width: 1; -fx-border-style: solid;">
   		<children>
		  <HBox  GridPane.columnIndex="0" GridPane.rowIndex="1"  >
		    <children>
		    	<VBox GridPane.columnIndex="0" GridPane.rowIndex="0" GridPane.columnSpan="2">
		    		<Label fx:id="sensitivityLbl" text="Sensitivity :  " prefWidth="170.0" />
		    	</VBox>
		    	<VBox GridPane.columnIndex="0" GridPane.rowIndex="0">
		    		<TextField fx:id="sensitivityTxt"  maxWidth="50.0"/>
		    	</VBox>
		   	</children>
		   </HBox>
		   <HBox  GridPane.columnIndex="0" GridPane.rowIndex="1"  >
		    <children>
		    	<VBox GridPane.columnIndex="0" GridPane.rowIndex="0" GridPane.columnSpan="2">
		    		<Label fx:id="transmissionCountsLbl" text="Transmission : " prefWidth="170.0" />
		    	</VBox>
		    	<VBox GridPane.columnIndex="0" GridPane.rowIndex="0">
		    		<TextField fx:id="transmissionCountsTxt"  maxWidth="50.0"/>
		    	</VBox>
		   	</children>
		   </HBox>
		   <HBox  GridPane.columnIndex="0" GridPane.rowIndex="1"  >
		    <children>
		    	<VBox GridPane.columnIndex="0" GridPane.rowIndex="0" GridPane.columnSpan="2">
		    		<Label fx:id="transmissionCountsLbl" text="Image type : " prefWidth="170.0" />
		    	</VBox>
		    	<VBox GridPane.columnIndex="0" GridPane.rowIndex="0">
		    		<ComboBox fx:id="imageTypeCombo" layoutX="15.0" layoutY="33.0" prefWidth="170" promptText="choose"/>
		    	</VBox>
		   	</children>
		   </HBox>
		    <HBox>
	  		<children>
	 			<Button text="Save" onAction="#handleSaveConfigAction" GridPane.columnIndex="0" GridPane.rowIndex="2"  />
			</children>
	 </HBox>
		 </children>
	  </VBox>		
       
		
    </GridPane>	
</GridPane>
